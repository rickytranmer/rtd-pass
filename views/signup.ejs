<% include ./partials/header.ejs %>

<% include ./partials/nav.ejs %>

<% if (message.length > 0) { %>
    <div class="alert alert-danger"><h3><%= message %></h3></div>
<% } %>

<div class="container-fluid">
	<h2>Sign Up</h2>
	<form action="/signup" method="POST">
		<div class="form-group">
			<input type="email" class="form-control" name="email" placeholder="Email">
		</div>
		<div class="form-group">
			<input type="password" class="form-control" name="password" placeholder="Password">
		</div>
		<div class="form-group">
			<input type="submit" class="btn btn-lg btn-primary">
		</div>
	</form>

	<br>
	<h4>Already have an account? &nbsp;<a href="/login">Log In</a>.</h4><br>
	<h4>We never send you any emails.</h4>
	<h4>We never sell your information.</h4>
	<h4>Your password is hashed and salted.</h4>

</div>

<script
  src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous"></script>
<script src="js/nav.js"></script>

<script type="text/javascript" src="js/signup.js"></script>

</body>
</html>